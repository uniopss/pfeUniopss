                <entry>
                    <key>index</key>
                    <value>fr</value>
                </entry>
            </job-data-map>
        </job-detail>
        <trigger>
            <cron>
                <name>IndexCron</name>
                <group>IndexCronGroup</group>
                <job-name>IndexJob</job-name>
                <job-group>IndexJobGroup</job-group>
                <cron-expression>0 15 10 ? * 6L 2050</cron-expression>
            </cron>
